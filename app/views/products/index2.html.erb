<h1 class="text-center">Productos</h1>
<div class="row">
	
	<% @products.each do |product| %>	
	<div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
		<div class="card gray text-dark big-padding bottom-space">
			<header>			
				<h3 class="grey-text bold text-center"><%= product.name %></h3>
			</header>
			
			<section>
				<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 inline-block no-padding text-center">
					<%= image_tag(product.image_url, :width => 200, :height => 200) if product.image.present? %>
				</div>
				
				<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-10 inline-block text-left">
					<br>
					<h3 class="green-text bold normal"> 
						Precio: 
						<span class="grey-text">
							<%= product.price %> Gs.
						</span>
					</h3>	
					
					<h3 class="green-text bold normal"> 
						Stock: <span class="grey-text"> <%= product.stock %></span>
					</h3>	
					
					<h3 class="green-text bold normal"> 
						Impuesto: <span class="grey-text"> <%= product.tax %> </span>
					</h3>	

					<p style="font-size: 12px;"> CÃ³d. Interno: <%= product.code %></p>
 			</div>
			</section>
			
			<div class="bold text-center">
				<br>
				<%= link_to 'Ver Detalle', product_path(product), class:'btn btn-warning' %> 
				<%= link_to 'Agregar', products_path, class:'btn btn-success' %>
			</div>
			
		</div>
	</div>
	
	<% end %>
	
</div>

