<p id="notice"><%= notice %></p>

<div class="card offset-xl-2 col-xl-9 white large-padding sombra">
	<h1 class="text-center text-success">
		<%= @product.name %>
	</h1>
	
	<div class="row">
		<div class="col-xl-6">
			<p class="text-center">
				<%= image_tag(@product.image_url, :width => 600, :height => 400) if @product.image.present? %>
			</p>
		</div>
		
		<div class="col-xl-6 pt-4 text-left">
			<p>
				<h1 class="green-text text-center">Descripci√≥n</h1>
				<br>
				<%= @product.description %>
			</p>
			
			<p>
				<strong class="green-text">Precio:</strong>
				<%= @product.price %>
			</p>
			
			<p>
				<strong class="green-text">Stock:</strong>
				<%= @product.stock %>
			</p>
			
			<p>
				<strong class="green-text">Tax:</strong>
				<%= @product.tax %>
				<br>
				<small>
					<%= time_ago_in_words(@product.created_at) %> ago
				</small>
			</p>
		</div>
	</div>

	<div class="text-right">
		<%= link_to 'Agregar al Carro', product_ordenar_path(@product), class:'btn btn-secondary' %>
	</div>
	
	
</div>

<div class="container">
	<br>
	<% if user_signed_in? %>
	<% if current_user.admin? %>
	<%= link_to 'Editar', edit_product_path(@product), class: 'btn btn-warning'%>
	<% end  %>
	<% end  %>
	<%= link_to 'Volver', products_path, class:'btn btn-dark' %>
</div>
